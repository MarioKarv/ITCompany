@model IEnumerable<ITCompany.Models.TaskCommand>

@{
    ViewData["Title"] = "Index";
}



<p>
    <a asp-action="Create">Додати</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                Працівник
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Task)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Task.ID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Інформація</a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
